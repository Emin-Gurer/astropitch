<% layout('layouts/boilerplate.ejs') %>
<h2>Login</h2>
<form class="bs-validate" action="/users/login" method="POST" novalidate>
  <div class="form-group">
    <label for="username">Username:</label>
    <input
      class="form-control"
      type="text"
      name="username"
      id="username"
      required
    />
  </div>
  <div class="form-group mb-3">
    <label for="password">Password:</label>
    <input
      class="form-control"
      type="password"
      name="password"
      id="password"
      required
    />
  </div>
  <button class="btn btn-success">Login</button>
</form>
