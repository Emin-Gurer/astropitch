<% layout('layouts/boilerplate.ejs') %>
<!-- This line will inject the hmtl code into boilerplate.ejs -->
<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-3">
      <img src="<%= pitch.image %>" class="card-img-top" alt="pitch image" />
      <div class="card-body">
        <h5 class="card-title"><%= pitch.title %></h5>
        <p class="card-text"><%= pitch.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Price: <%= pitch.price %></li>
        <li class="list-group-item"><%= pitch.location %></li>
      </ul>
      <div class="card-body">
        <a class="btn btn-success" href="/pitches/<%= pitch.id %>/edit">Edit</a>
        <form
          class="d-inline"
          action="/pitches/<%= pitch.id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
        <a class="btn btn-primary" href="/pitches">Home</a>
      </div>
    </div>
  </div>
</div>
